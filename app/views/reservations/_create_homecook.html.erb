<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Complete Your Homecook Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <%= simple_form_for @homecook, :url => "/homecooks" do |r|%>
         <div class="form-field"> <b>Name:</b>&thinsp;<%= current_user.name %></div>
         <div class="form-field"> <b>Email:</b>&thinsp;<%= current_user.email %></div>
          <div class="form-field"><b>Phone:</b>&thinsp;<%= current_user.phone %></div>
          <div class="form-field"><b>Address:</b>&thinsp;<%= current_user.address %></div>
          <hr>
          <%= r.input :price_per_person %>
          <%= r.input :introduction %>
          <%= r.input :tag_list, as: :check_boxes, collection: [ "Chinese", "Japanese", "Italian", "French","Brazilian" ], label: 'Types of Cuisines' %>
          <%= r.input :photos, as: :file, input_html: { multiple: true }  %>
          <%= r.submit 'Done', class: 'yellow-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
