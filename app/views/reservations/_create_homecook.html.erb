      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Create your homecook</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= simple_form_for current_user, url: registration_path(current_user) do |r|%>
                <%= r.input :name %>
                <%= r.input :email %>
                <%= r.input :address %>
                <%= r.submit class: '' %>
              <% end %>
              <%= simple_form_for @homecook, :url => "/homecooks" do |r|%>
                <%= r.input :price_per_person %>
                <%= r.input :introduction %>
                <%= r.input :tag_list, as: :check_boxes, collection: [ "Chinese", "Japanese", "Italian", "French","Brazilian" ] %>
                <%= r.input :photos, as: :file, input_html: { multiple: true }  %>
                <%= r.submit class: '' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
