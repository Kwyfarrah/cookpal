<div class="container">
  <div class="frame-btn">
    <button class="btn-reservations active" id="homecook-btn">Homecook</button>
    <button class="btn-reservations" id="customer-btn">Customer</button>
  </div>

  <div class="reservations-tabs">
    <div class="homecook-tab booked <%= 'active' if current_user.reservations  %> ">
      <p>Received Orders</p>
      <div class="card-booking">

      </div>
    </div>

    <div class="homecook-tab new-homecook <%= 'active' if current_user.homecooks %>">
      <p>You have no reservations yet...</p>
    </div>

    <div class="homecook-tab non-booked <%= 'active' if current_user.homecooks && !current_user.reservations %>">
      <p>Become homecook!</p>
      <div class="btn-update-homecook">
        <a class="btn btn-homecook" data-toggle="modal" data-target="#exampleModal" style="text-align: center">Update your homecook</a>
      </div>
    </div>



    <div class="customer-tab">

    </div>

  </div>
</div>

<%= render "create_homecook" %>
