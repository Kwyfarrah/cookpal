<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1516824467205-afa656d31a79?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80)">
  <div class="container">
    <h1>Let Me Cook For You</h1>
    <p>Get a homecook master to cook at your place</p>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Type any location, cuisine type, homecook name....." />
      <button name="button" type="submit" class="btn btn-homecook">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>
</div>
<div class="title">
  <h2 style="text-align: center" >The latest homecooks</h2>
</div>
<div class = 'container'>
  <div class="cards">
    <% @homecooks.each do |homecook| %>
    <div class="card-category">
      <% if homecook.photos.attached? %>
      <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path homecook.photos.first.key %>')"></div>
      <% else %>
      <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?meals&<%= rand(10000) %>)">
      </div>
      <% end %>
      <div class="card-details">
        <div><strong><% if policy(homecook).show? %><%= link_to homecook.user.name, homecook_path(homecook) %><% end %></strong></div>
        <div><%= rand(40..50)/10.0 %><i class="fas fa-star"></i></div>
      </div>
      <div class="card-details">
        <div><%= homecook.tag_list %></div>
        <div><%= homecook.price_per_person %>yen/person</div>
      </div>
    </div>
    <% end %>

  </div>
</div>

<div class="btn_seemore">
  <a class="btn btn-homecook" href="/homecooks" style="text-align: center">See more<i class="fas fa-chevron-right"></i></a>
</div>
